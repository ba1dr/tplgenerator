server {
    listen 80;

    proxy_intercept_errors on;
    gzip on;
    sendfile on;

    error_page 500 502 503 /50x.html;
    error_page 404 /404.html;

    location / {
        # auth_basic "<%= @project_name %>";
        # auth_basic_user_file /etc/nginx/<%= @project_name %>_passwd;
        try_files $uri @gunicorn;
    }

    location /static/ {
        alias /opt/<%= @project_name %>/<%= @project_name %>/static/;
       access_log  off;
    }

    location /media/ {
        alias /opt/<%= @project_name %>/<%= @project_name %>/media/;
    }

    location @gunicorn {
        # proxy_pass http://127.0.0.1:8000;
        proxy_pass http://unix:/tmp/<%= @project_name %>_gunicorn.socket;
        # proxy_set_header Host $host:$server_port;
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 3600;
        proxy_connect_timeout 3600;
        fastcgi_read_timeout 3600s;

        access_log /var/log/<%= @project_name %>/nginx-access.log;
        error_log  /var/log/<%= @project_name %>/nginx-error.log;

        client_max_body_size 15m;
    }

}